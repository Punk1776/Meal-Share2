<div class="row">
  <div class="col-md-6">
    <h2>Welcome To Meal Share! Login or create an account to get started</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login"></label>
        <input class="form-input" type="text" id="email-login" placeholder="Enter your email" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" type="password" id="password-login" placeholder="Enter your password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  
    <h2>Or</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup"></label>
        <input class="form-input" type="text" id="name-signup" placeholder="Enter your name" />
      </div>
      <div class="form-group">
        <label for="email-signup"></label>
        <input class="form-input" type="text" id="email-signup" placeholder="Enter your email" />
      </div>
      <div class="form-group">
        <label for="password-signup"></label>
        <input class="form-input" type="password" id="password-signup" placeholder="Enter your password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>   